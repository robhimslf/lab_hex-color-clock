{
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "es6",
            "dom",
            "dom.iterable"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "outDir": "./public"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}